{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", ".storybook/**/*", ".storybook/**/*.tsx", "env.d.ts"],
  "exclude": ["src/**/__tests__/*", ".storybook/main.ts"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
